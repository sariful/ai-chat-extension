{
    "manifest_version": 3,
    "name": "DOM Watcher",
    "version": "1.2",
    "description": "Watches for specific messages and triggers actions automatically. Now includes AI auto-reply.",
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://api.openai.com/*",
        "http://localhost:11434/*",
        "http://127.0.0.1:11434/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "jquery.min.js",
                "content.js"
            ]
        }
    ],
    "icons": {
        "48": "icons/icon.svg"
    }
}
